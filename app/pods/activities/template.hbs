<div class="box">
    <div class="box-header">
        <h3 class="box-title">Statistic</h3>
    </div>
    <div class="box-body">
        <ul class="nav nav-pills" role="tablist">
            <li role="presentation" class="active">Total posts <span class="badge">{{total}}</span></li>
            <li role="presentation">Posts this week <span class="badge">{{totalWeek}}</span></li>
        </ul>
        <div class="col-md-3">
            {{ember-chart type='Line' data=dataForChart options=chartOptions width=1000 height=450 legend=false}}
        </div>
    </div>
    <div class="box-footer clearfix">
    </div>
</div>
